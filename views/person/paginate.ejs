<!--Search.ejs-->

<div class="container">

    <!--paginating-->
    <% const current = parseInt(req.query.page) || 1; %>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="/person/paginate/?page=<%= Math.max(current-1, 1) %>">Previous</a>
            </li>

            <% for (i = 1; i <= count; i++) { %>
            <li class="page-item">
                <a class="page-link" href="/person/paginate/?page=<%= i %>">
                    <%= i %></a>
            </li>
            <% } %>

            <li class="page-item">
                <a class="page-link" href="/person/paginate/?page=<%= Math.min(current+1, count) %>">Next</a>
            </li>
        </ul>
    </nav>
    <!--paginating END-->
    <!-- two event -->
    <div class="row">
        <% persons.forEach( function(model) { %>
        <div class="card col-12 col-sm-6 col-lg-4 col-xl-4" style="width: 18rem;">
            <!-- <img class="card-img-top" src="<%= model.imageURL %>" alt="Card image cap"> -->
            <div class="card-body">
                <!-- 
                    <a class="nav-item ns-link active" href="person/detail/<%= model.id %> ">
                <%= model.eventName %><br><br>
                <span class="sr-only">(current)</span>
            </a> 
        -->
                <a class="card-title nav-item ns-link active" href="/person/detail/<%= model.id %>">
                    <%= model.patientName %>
                </a>
                <p class="card-text"><li class="list-group-item">
                        Age:
                        <%= model.age %>
                    </li>
                    <li class="list-group-item">Smoking:
                        <%= model.smoking %>
                    </li>
                    <li class="list-group-item">Asthma:
                        <%= model.Asthma %>
                    </li>
                    <li class="list-group-item">PAD:
                        <%= model.PAD %>
                    </li>
                    <li class="list-group-item">sizeOfTheOriginalTumour: 13</li></p>

            </div>
        </div>
        <% }); %>
        <!-- two event END-->

        <!-- searching -->
        <div class="card col-12 col-sm-6 col-lg-4 col-xl-4" style="width: 18rem;">
            <form action="/person/paginate">
                <div class="form-group">
                    <label>Patient Name</label>
                    <input type="text" class="form-control" name="patientName">
                </div>
                <div>
                    <label>Smoking</label>
                    <select class="form-control" name="smoking">
                        <option value="nan">Please select a smoking:</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
                <div>
                    <span>Asthma?</span>
                    <select class="form-control" name="Asthma">
                        <option value="nan">Please select a Asthma:</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>
                <div>
                    <span>PAD?</span>
                    <select class="form-control" name="PAD">
                        <option value="nan">Please select a PAD:</option>
                        <option value="1">Yes</option>
                        <option value="0">No</option>
                    </select>
                </div>

                <div>
                    <span>sizeOfTheOriginalTumour</span>
                    <select class="form-control" name="sixMonthsMI">
                        <option value="nan">Please select a sixMonthsMI:</option>
                        <option value="1">11</option>
                        <option value="2">12</option>
                        <option value="3">13</option>
                        <option value="4">14</option>
                    </select>
                </div>

                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <!-- searching END -->
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
